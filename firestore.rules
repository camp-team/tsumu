rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user} {
      allow read: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.id;
    }
    match /notes/{note} {
      allow read: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.id;
    }
  }
}
